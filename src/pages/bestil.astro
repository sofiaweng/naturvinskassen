---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import { Image } from 'astro:assets';
import Visa from "../assets/images/visa.svg";
import Mastercard from "../assets/images/mastercard.svg";
---
<style>
    h1{
        @apply italic;
        @apply text-orange-500
    }
</style>
<MainLayout>
    <article class="grid lg:grid-cols-2 relative">
        <!-- ordreoversigt -->
        <section class="lg:order-1 bg-offwhite  " >
            <!-- med til at gøre boksen sticky -->
            <div class="md:sticky top-[10%] self-start">
                <!-- skjul ordreoversigtbar -->
                <div class="flex justify-between border-b lg:hidden  border-orange-500 p-xs">
                    <div class="flex-row flex  ">
                        <p class="self-center">
                        Skjul ordreoversigt
                        </p>
                        <div class="self-center relative w-xs h-10 flex items-center justify-center">
                            <span class="absolute block w-full h-1 bg-green-500 transform rotate-45 ease-in"></span>
                            <span class="absolute block w-full h-1 bg-green-500 transform -rotate-45 ease-in"></span>
                        </div>
                    </div>
                    <p class="self-center">
                    450 DKK / md.
                    </p>
            </div>
                 <!-- selve ordreoversigten (indholdet) -->
                <div class="p-xs lg:p-lg py-sm border-b lg:border-0 border-orange-500 grid gap-xs">
                    <h1>Ordreoversigt</h1>
                    <div class="flex flex-row justify-between ">
                        <!-- ikon af kassen -->
                        <div>
                        </div>
                        <!-- beskrivelse -->
                        <p>
                            Naturvinskassen -
                            <br>
                            Månedlig abonnement
                        </p>
                        <p>
                            450 DKK / md.
                        </p>
                    </div>
                    <!-- rabat -->
                    <div>
                        <div class="mb-xxs">
                            <input 
                                type="text"
                                class="bg-white border border-lightgrey placeholder:text-lightgrey text-darkgrey text-body sm:text-body-lg rounded-mobile md:rounded-desktop focus:ring-orange-500 focus:border-orange-500 block w-full  "
                                placeholder="Rabatkode eller gavekort" />
                        </div>

                        <div class="flex justify-end">
                            <Button>Brug</Button>
                        </div>  
                    </div>
                    <!-- pris subtotal, levering og alt -->
                    <div class="grid gap-xs">
                        <!-- pris subtotal og levering  -->
                        <div class="grid gap-xxs">
                            <div class="flex flex-row justify-between">
                                <p>Subtotal</p>
                                <p>450 DKK</p>
                            </div>
                            <div class="flex flex-row justify-between">
                                <p>Levering</p>
                                <p>Gratis</p>
                            </div>
                        </div>
                        <!-- ialt pris -->
                        <div class="flex flex-row justify-between">
                            <div class="grid ">
                                <h3 class="font-semibold">I alt</h3>
                                <span class="text-xs">Inklusiv 20 DKK i moms</span>
                            </div>
                                <p>
                                450 DKK
                                </p>
                        </div>
                    </div>
                </div>
            </div>

        </section>


        <form class=" p-xs grid gap-sm lg:p-lg">
            <article>
                <h1>Kontaktoplysninger</h1>
                <div class="relative">
                    <div class="absolute inset-y-0 start-0 flex items-center ps-3.5 pointer-events-none">
                    <svg class="w-4 h-4 " aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="#FF9C66" viewBox="0 0 20 16">
                        <path d="m10.036 8.278 9.258-7.79A1.979 1.979 0 0 0 18 0H2A1.987 1.987 0 0 0 .641.541l9.395 7.737Z"/>
                        <path d="M11.241 9.817c-.36.275-.801.425-1.255.427-.428 0-.845-.138-1.187-.395L0 2.6V14a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V2.5l-8.759 7.317Z"/>
                    </svg>
                    </div>
                    <input 
                        type="text" 
                        id="email-address-icon" 
                        class="bg-transparent border border-lightgrey text-darkgrey text-body sm:text-body-lg rounded-mobile md:rounded-desktop focus:ring-orange-500 focus:border-orange-500 block w-full ps-10 p-2.5" 
                        placeholder="E-mail">
                </div>

            </article>
            <article class="grid gap-xs">
                <div>
                    <h1>Levering</h1>  
                     <div class="flex-col flex gap-xs"> 
                        <div class="flex items-center me-4">
                            <input checked id="privat" type="radio" value="" name="levering" class="w-4 h-4 text-orange-300 bg-white border-lightgrey focus:ring-red-500 focus:ring-2">
                            <label for="privat" class="ms-2 text-body sm:text-body-lg  text-darkgrey">GLS (Privatlevering) </label>
                        </div>
                        <div class="flex items-center me-4">
                            <input id="pakkeshop" type="radio" value="" name="levering" class="w-4 h-4 text-orange-300 bg-white border-lightgrey focus:ring-red-500 focus:ring-2">
                            <label for="pakkeshop" class="ms-2 text-body sm:text-body-lg  text-darkgrey">GLS pakkeshop </label>
                        </div>
                        <div class="flex items-center me-4">
                            <input id="erhverv" type="radio" value="" name="levering" class="w-4 h-4 text-orange-300 bg-white border-lightgrey focus:ring-red-500 focus:ring-2">
                            <label for="erhverv" class="ms-2 text-body sm:text-body-lg text-darkgrey">GLS erhverv </label>
                        </div>
                        <div class="flex items-center me-4">
                            <input id="strakslevering" type="radio" value="" name="levering" class="w-4 h-4 text-orange-300 bg-white border-lightgrey focus:ring-red-500 focus:ring-2">
                            <label for="strakslevering" class="ms-2 text-body sm:text-body-lg text-darkgrey">GLS strakslevering</label>
                        </div>
                        <div class="flex items-center me-4">
                            <input id="afhentning" type="radio" value="" name="levering" class="w-4 h-4 text-orange-300 bg-white border-lightgrey focus:ring-red-500 focus:ring-2">
                            <label for="afhentning" class="ms-2 text-body sm:text-body-lg text-darkgrey">Afhentning i butik </label>
                        </div>
                    </div>
                </div>

                <div class="grid gap-xs">
                        <select id="countries" class="bg-white border border-lightgrey text-darkgrey text-body sm:text-body-lg rounded-mobile md:rounded-desktop focus:ring-orange-500 focus:border-orange-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-orange-500 dark:focus:border-orange-500">
                          <option>Danmark</option>
                          <option>Frankrig</option>
                          <option>Tyskland</option>
                          <option>Sverige</option>
                        </select>
                        <div class="flex flex-row gap-xs">
                                <input 
                                    type="text"
                                    class="bg-white border border-lightgrey placeholder:text-lightgrey text-darkgrey text-sm rounded-mobile md:rounded-desktop focus:ring-orange-500 focus:border-orange-500  w-full  "
                                    placeholder="Fornavn" />
                                <input 
                                    type="text"
                                    class="bg-white border border-lightgrey placeholder:text-lightgrey text-darkgrey text-body sm:text-body-lg rounded-mobile md:rounded-desktop focus:ring-orange-500 focus:border-orange-500  w-full  "
                                    placeholder="Efternavn" />
                        </div>
                        <input 
                            type="text"
                            class="bg-white border border-lightgrey placeholder:text-lightgrey text-darkgrey text-body sm:text-body-lg rounded-mobile md:rounded-desktop focus:ring-orange-500 focus:border-orange-500 block w-full  "
                            placeholder="Adresse" 
                        />
                        <div class="flex flex-row gap-xs">
                            <input 
                                type="text"
                                class="bg-white border border-lightgrey placeholder:text-lightgrey text-darkgrey text-body sm:text-body-lg rounded-mobile md:rounded-desktop focus:ring-orange-500 focus:border-orange-500  w-full  "
                                placeholder="Postnummer" />
                            <input 
                                type="text"
                                class="bg-white border border-lightgrey placeholder:text-lightgrey text-darkgrey text-body sm:text-body-lg rounded-mobile md:rounded-desktop focus:ring-orange-500 focus:border-orange-500  w-full  "
                                placeholder="By" />
                        </div>
                        <input 
                        type="tel"
                        class="bg-white border border-lightgrey placeholder:text-lightgrey text-darkgrey text-body sm:text-body-lg rounded-mobile md:rounded-desktop focus:ring-orange-500 focus:border-orange-500 block w-full  "
                        placeholder="Telefonnummer" 
                        />
                        
                </div>
            </article>
            <article>
                <h1>Betaling</h1>  
                <div class="border border-lightgrey">
                    <div class="flex justify-between gap-xs p-xs border-b border-lightgrey">
                        <div class="flex items-center me-4">
                            <input checked id="kredit" type="radio" value="" name="levering" class="w-4 h-4 text-orange-500 bg-white border-lightgrey focus:ring-red-500 focus:ring-2">
                            <label for="kredit" class="ms-2 text-body sm:text-body-lg  text-darkgrey">Kreditkort</label>
                        </div>
                        <div class="flex gap-xxs justify-end lg:justify-center lg:flex-col">
                            <Image class='w-[35%] lg:w-m' src={Visa} alt="visa logo"></Image>    
                            <Image class='w-[35%] lg:w-m' src={Mastercard} alt="visa logo"></Image>    
                        </div>
                    </div>
                    <div class="bg-offwhite p-xs grid gap-xs">
                        
                        <input 
                        type="text"
                        class="bg-white border border-lightgrey placeholder:text-lightgrey text-darkgrey text-body sm:text-body-lg rounded-mobile md:rounded-desktop focus:ring-orange-500 focus:border-orange-500 block w-full  "
                        placeholder="Kortnummer" />
                        
                        <div class="flex flex-row gap-xs">
                            <!-- <input 
                                type="date"
                                class="bg-white border border-lightgrey  placeholder:text-lightgrey text-darkgrey text-body sm:text-body-lg  rounded-mobile md:rounded-desktop focus:ring-orange-500 focus:border-orange-500  w-full  "
                                placeholder="Udløbsdato (MM/ÅÅ)" /> -->
                                <input 
                                type="text"
                                class="bg-white border border-lightgrey  placeholder:text-lightgrey text-darkgrey text-body sm:text-body-lg  rounded-mobile md:rounded-desktop focus:ring-orange-500 focus:border-orange-500  w-full  "
                                placeholder="Udløbsdato (MM/ÅÅ)" />
                                
                            <input 
                                type="text"
                                class="bg-white border border-lightgrey placeholder:text-lightgrey text-darkgrey text-body sm:text-body-lg rounded-mobile md:rounded-desktop focus:ring-orange-500 focus:border-orange-500  w-full  "
                                placeholder="Sikkerhedskode" />
                        </div>
                        <input 
                        type="text"
                        class="bg-white border border-lightgrey placeholder:text-lightgrey text-darkgrey text-body sm:text-body-lg  rounded-mobile md:rounded-desktop focus:ring-orange-500 focus:border-orange-500 block w-full  "
                        placeholder="Navn på kortet" 
                        />
                    </div>
                </div>
            </article>
            <!-- betingelser -->
            <article>
                <div class="flex items-center mb-4">
                    <input id="checkbox-1" type="checkbox" value="" class="w-4 h-4 text-orange-500  bg-transparent border-lightgrey rounded focus:ring-orange-500 dark:focus:ring-orange-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" >
                    <label for="checkbox-1" class="ms-2 text-body sm:text-body-lg  text-darkgrey dark:text-gray-300">
                        Jeg accepterer 
                        <a href="#" class="underline">
                            abonnements-betingelserne
                        </a>
                        <span class="text-orange-500">
                            *
                        </span>
                    </label>
                </div>
                <div class="flex items-center ">
                    <input  id="checkbox-1" type="checkbox" value="" class="w-4 h-4 text-orange-500 bg-transparent border-lightgrey rounded focus:ring-orange-500 dark:focus:ring-orange-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" >
                    <label for="checkbox-1" class="ms-2 text-body sm:text-body-lg text-darkgrey dark:text-gray-300">
                        Jeg har læst og accepterer webshoppens 
                        <a href="#" class="underline">
                            Vilkår og betingelser
                        </a>
                        <span class="text-orange-500">
                            *
                        </span>
                    </label>
                </div>
              
            </article>
            <div class="flex justify-end">
                 <a href="/tak">
                <Button>Bestil nu</Button>
                </a>
            </div>
           
        </form>

    </article>

</MainLayout>
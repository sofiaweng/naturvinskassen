---
export interface Props {
  variant?: "filled" | "stroke"; // Typen af knap
}

const { variant = "filled" } = Astro.props; // Standardvariant er "filled"

const baseClass = `
  px-15 py-3 font-caslon font-regular italic text-[14px]
  sm:text-[20px] sm:px-s sm:py-xxs
  rounded-mobile flex items-center justify-center transition-all duration-300
`;

const filledClass = `
  bg-green-500 hover:bg-green-400 text-white
`;

const strokeClass = `
  bg-white text-green-500 border-green-500 border-medium 
  hover:bg-green-500 hover:text-white
`;
---

<button 
  class={`${baseClass} ${variant === "filled" ? filledClass : strokeClass}`}
>
  <slot />
</button>
